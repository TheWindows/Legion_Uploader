php_value upload_max_filesize 1024M
php_value post_max_size 1024M
php_value max_execution_time 300
php_value max_input_time 300
php_value memory_limit 256M

Header always set X-Content-Type-Options "nosniff"
Header always set X-Frame-Options "SAMEORIGIN"
Header always set X-XSS-Protection "1; mode=block"

Options -Indexes

<FilesMatch "\.(inc|log|sql|env)$">
    Require all denied
</FilesMatch>

<FilesMatch "^\.(ht|git)">
    Require all denied
</FilesMatch>

<FilesMatch "^(index|upload|download|login|register|dashboard|myfiles|admin|logout|db|config|login_process|register_process|admin_actions|delete_file|deleteExpired|check_config)\.php$">
    Require all granted
</FilesMatch>

RewriteEngine On

RewriteRule ^uploads/ - [F,L]

RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

RewriteRule ^(.*)$ index.php [L,QSA]

ErrorDocument 404 /index.php
ErrorDocument 403 /index.php
ErrorDocument 500 /index.php